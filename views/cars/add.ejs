<div class="card" style="max-width: 600px; margin: 0 auto;">
    <div class="card-header">
        <h2>Add New Car</h2>
    </div>
    <div style="padding: 1.5rem;">
        <form action="/cars/add" method="POST">
            <div class="form-group">
                <label>Car Name</label>
                <input type="text" name="name" placeholder="e.g. Tesla Model S" required>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div class="form-group">
                    <label>Brand</label>
                    <input type="text" name="brand" placeholder="e.g. Tesla" required>
                </div>
                <div class="form-group">
                    <label>Model</label>
                    <input type="text" name="model" placeholder="e.g. 2024 Performance" required>
                </div>
            </div>
            <div class="form-group">
                <label>Price Per Day ($)</label>
                <input type="number" name="pricePerDay" min="0" placeholder="100" required>
            </div>
            <div class="form-group">
                <label>Status</label>
                <select name="status">
                    <option value="available">Available</option>
                    <option value="maintenance">Maintenance</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Create Car</button>
        </form>
    </div>
</div>